    $(document).ready(function() {
      var selector = 'input[type="checkbox"].toggle';
      $(selector).change(function(event) {
        $(event.target).parents().submit();
        var element = $('<div id="flash fixed" class="alert alert-info alert-dismissible" role="alert"><button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">Ã—</span></button>Settings updated</div>');
        $('.navbar-ledja').after(element);
        element.fadeOut({ duration: 2000 });
      });
    });
  </script>
<% end  %>
