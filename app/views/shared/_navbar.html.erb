<div class="navbar-ledja <%= 'navbar-transparent navbar-fixed-top no-nav-shadow' if current_page?(root_path) %>">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-ledja-brand" do %>
    <div id="logo">
      <i class="fas fa-check-double"></i><p>LedJa</p>
    </div>
  <% end %>
  <!-- Right Navigation -->
  <div class="navbar-ledja-right hidden-xs hidden-sm">
    <% if user_signed_in? %>
      <!-- Links when logged in -->
      <%= link_to "Dashboard", subscriptions_index_path, class: "navbar-ledja-item navbar-ledja-link" %>
      <!-- Avatar with dropdown menu -->
      <div class="navbar-ledja-item">
        <div class="dropdown">
          <%= image_tag "http://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbar-ledja-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-ledja-dropdown-menu">
            <li>
              <%= link_to edit_user_registration_path do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to edit_user_registration_path do %>
                <i class="fa fa-cog"></i>  <%= t(".settings", default: "Settings") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to t(".sign_up", default: "Sign-Up"), new_user_registration_path, class: "navbar-ledja-item navbar-ledja-link" %>
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-ledja-item navbar-ledja-link" %>
    <% end %>
  </div>
  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-ledja-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-ledja-dropdown-menu">
        <% if user_signed_in? %>
          <li><a href="#">Some mobile link</a></li>
          <li><a href="#">Other one</a></li>
          <li><a href="#">Other one</a></li>
        <% else %>
          <li><%= link_to "Sign-Up", new_user_registration_path %></li>
          <li><%= link_to "Sign-In", new_user_session_path %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
